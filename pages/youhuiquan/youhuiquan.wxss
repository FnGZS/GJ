.youhuiquan{
  width: 100%;
  height: 100%;
}
.youhuiquan-hearder{
  opacity:0.5;
  margin: auto;
  width: 100%;
  height: 60rpx;
  background-color:#f7f5f5;
  
}
.youhuiquan-hearder .iconfont{
  float: left;
  line-height: 60rpx;
  margin-left: 2%;
  margin-right: 1%;
}
.youhuiquan-hearder-wenzi-left{
  line-height: 60rpx;
  float: left;
  font-size: 30rpx;
}
.youhuiquan-hearder-wenzi-right{
  line-height: 60rpx;
  float: right;
  font-size: 25rpx;
  /* color: #bfbfbf; */
  margin-right: 2%;
}
.youhuiquan-list{
  width: 96%;
  height: 220rpx;
  background: #fff;
  display: flex;
  margin-top: 1%;
  margin-left: 2%;
  align-items:center;
  border: 1px solid #ddd; 
}
.list-left{
  width: 30%;
  height: 90%;
  position: relative;
  text-align: center;
}
.juchi{
  height: 90%;
  margin-left: 5%;
  position: relative;
  text-align: center;
}
.juchi:before {
  content: "";
  position: absolute;
  top: -20px;
  width: 10px;
  height: 100%;
  margin-top: 20px;
  background-size: 20px 10px;
  left: -10px;
  background-color: #fff;
  background-position: 100% 35%;
  background-image: linear-gradient(-45deg, #46CBC3 25%, transparent 25%, transparent), 
                  linear-gradient(-135deg, #46CBC3 25%, transparent 25%, transparent);
}
.left-youhui{
  display: flex;
  justify-content: center;
  color: white;
  margin-top: 8%;
  margin-right: 30rpx;

}
.left-symbol{
  font-size: 50rpx;
  margin-top: 30rpx;
}
.left-value{
  font-size: 80rpx;
}
.left-man{
  color: white;
  font-size: 30rpx;
}
.list-right{
  width: 62%;
  height: 90%;
  position: relative;
  /* background: red; */
}

.right-title{
  display: flex;
}
.right-label{
  color: white;
  border-radius: 10rpx;
  background: #46CBC3;
  font-size: 25rpx;
  width:25%;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  margin-left: 5%;
  margin-top: 5%;
  margin-right: 3%;
}
.right-text{
  font-size: 25rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 5%;
}
.right-time{
  margin-left: 5%;
  font-size: 25rpx;
  margin-top: 12%;
  color: #CDC5BF;

}
.right-btn{
  position: absolute;
  width: 30%;
  height: 50rpx;
  background: #46CBC3;
  font-size: 30rpx;
  line-height: 50rpx;
  border-radius: 10rpx;
  color: white;
  text-align: center;
  right: 5%;
  bottom: 18%
}